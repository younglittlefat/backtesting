{
  "version": "2.0",
  "description": "Conservative configuration: high liquidity, low volatility, strict diversification",

  "paths": {
    "data_dir": "data/chinese_etf",
    "output_dir": "results/selector",
    "output_filename": "pool_conservative.csv"
  },

  "stage1_initial_filter": {
    "min_turnover": 100000000,
    "min_listing_days": 252
  },

  "stage2_core_filter": {
    "volatility": {
      "min": 0.15,
      "max": 0.40
    }
  },

  "scoring_system": {
    "mode": "optimized"
  },

  "stage3_diversification": {
    "target_portfolio_size": 20,
    "max_correlation": 0.6,

    "diversify_v2": {
      "enable": true,
      "score_diff_threshold": 0.05
    }
  }
}
