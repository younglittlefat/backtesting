{
  "version": "2.0",
  "description": "Complete test configuration with all parameters specified",

  "paths": {
    "data_dir": "data/chinese_etf",
    "output_dir": "results/selector",
    "output_filename": "test_full_pool.csv"
  },

  "time_range": {
    "start_date": "2023-01-01",
    "end_date": "2024-12-31"
  },

  "stage1_initial_filter": {
    "min_turnover": 80000000,
    "min_listing_days": 200,
    "turnover_lookback_days": 30
  },

  "stage2_core_filter": {
    "adx": {
      "period": 14,
      "lookback_days": 250,
      "percentile": 75.0
    },

    "ma_backtest": {
      "enable": false,
      "short_period": 20,
      "long_period": 50,
      "ret_dd_percentile": 70.0
    },

    "volatility": {
      "min": 0.18,
      "max": 0.55,
      "lookback_days": 252
    },

    "momentum": {
      "periods": [63, 252],
      "min_positive": true
    },

    "filter_mode": {
      "skip_percentile_filtering": true,
      "skip_range_filtering": true
    }
  },

  "scoring_system": {
    "enable_unbiased_scoring": true,
    "mode": "optimized",

    "benchmark": {
      "ts_code": "510300.SH"
    },

    "windows": {
      "excess_return_short": 20,
      "excess_return_long": 60,
      "trend_quality": 60,
      "trend_consistency": 63,
      "price_efficiency": 252,
      "volume_short": 20,
      "volume_long": 60,
      "liquidity_score": 30
    },

    "weights_v2": {
      "core_trend": 0.40,
      "trend_quality": 0.35,
      "strength": 0.15,
      "volume": 0.10,

      "core_trend_sub": {
        "excess_return_20d": 0.40,
        "excess_return_60d": 0.60
      }
    }
  },

  "stage3_diversification": {
    "target_portfolio_size": 25,
    "max_correlation": 0.68,
    "min_industries": 4,

    "deduplication": {
      "enable": true,
      "min_ratio": 0.85,
      "thresholds": [0.97, 0.94, 0.91, 0.88]
    },

    "diversify_v2": {
      "enable": true,
      "score_diff_threshold": 0.08
    },

    "balance_industries": true
  },

  "output_options": {
    "verbose": true,
    "with_analysis": false,
    "skip_portfolio_optimization": false
  }
}
