{
  "version": "2.0",
  "description": "Aggressive configuration: lower liquidity threshold, higher volatility, score-first approach",

  "paths": {
    "data_dir": "data/chinese_etf",
    "output_dir": "results/selector",
    "output_filename": "pool_aggressive.csv"
  },

  "stage1_initial_filter": {
    "min_turnover": 20000000,
    "min_listing_days": 90
  },

  "stage2_core_filter": {
    "volatility": {
      "min": 0.25,
      "max": 0.80
    }
  },

  "scoring_system": {
    "mode": "optimized"
  },

  "stage3_diversification": {
    "target_portfolio_size": 20,
    "max_correlation": 0.75,

    "diversify_v2": {
      "enable": true,
      "score_diff_threshold": 0.10
    }
  }
}
